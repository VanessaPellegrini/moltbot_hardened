<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.moltbot.hardened.guardian</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Library/Developer/CommandLineTools/usr/bin/python3</string>
        <string>/usr/local/lib/moltbot-hardened/guardian.py</string>
        <string>--interval</string>
        <string>30</string>
    </array>

    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/usr/local/var/log/moltbot-hardened/guardian.stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/usr/local/var/log/moltbot-hardened/guardian.stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin</string>
        <key>MBH_GUARDIAN_LOG</key>
        <string>/usr/local/var/log/moltbot-hardened/guardian.log</string>
        <key>MBH_STATE_FILE</key>
        <string>/usr/local/var/moltbot-hardened/state/breaker-state.json</string>
        <key>MBH_NGINX_DIR</key>
        <string>/usr/local/etc/nginx/servers</string>
        <key>MBH_CONF_PREFIX</key>
        <string>moltbot-control</string>
        <key>MBH_AUTH_FILE</key>
        <string>/usr/local/etc/nginx/.htpasswd</string>
        <key>MBH_CONTROL_PORT</key>
        <string>3000</string>
        <key>MBH_BREAKER_PORT</key>
        <string>8080</string>
        <key>MBH_GUARDIAN_INTERVAL</key>
        <string>30</string>
        <key>MBH_CLI</key>
        <string>/usr/local/bin/moltbot-hardened</string>
    </dict>
</dict>
</plist>
